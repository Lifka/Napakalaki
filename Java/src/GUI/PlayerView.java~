    public void setNapakalaki(Napakalaki n){
        napakalakiModel = n;
        repaint();
    }
    
    public void setPlayer (Player p) {
        playerModel = p;
        
        String varname = playerModel.getName();
        
        setTitle(varname + " profile");
        name.setText(varname);
        
        // Establecemos la imagen de vivo o muerto
        ImageIcon playerimg;
        if (playerModel.isDead())
            playerimg = new ImageIcon(getClass().getResource("/GUI/img/muerto.png"));
        else
            playerimg = new ImageIcon(getClass().getResource("/GUI/img/player.png"));
        playericon.setIcon(playerimg);
            
        // Establecemos la imagen del nivel real
        ImageIcon levelrealimg;
        levelrealimg = new ImageIcon(getClass().getResource("/GUI/img/level/real/" + Integer.toString(playerModel.getLevels()) + ".png"));
        level.setIcon(levelrealimg);
        
        fillTreasurePanel (visibleTreasures, playerModel.getVisibleTreasures());
        fillTreasurePanel (hiddenTreasures, playerModel.getHiddenTreasures());
        
        repaint();
        revalidate();

    }
    
    private void makevisibleActionPerformed(java.awt.event.ActionEvent evt) {                                            
